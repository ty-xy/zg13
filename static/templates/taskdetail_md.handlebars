                    <input type="checkbox" class="taskdetail_state" id="taskdetail_check">
                    <p class="taskdetail_list">{{taskdetail_list}}</p>
                </div>
                <textarea name="{{id}}" id="taskdetail_addnote" cols="30" rows="10" placeholder="添加备注...">{{taskdetail_addnote}}</textarea>
