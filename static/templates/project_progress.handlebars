<div class="ask-for-leave-title">
  <span class="first-icon"><i class="iconfont icon-xiayiji "></i></span>
   <span>工程进度汇报</span>
</div>
<div class="container container-control">
    <br>
        <form class="form-horizontal" role="form" id="form-test">
            <div class="form-group form-group-common ">
                <label for="username" class="col-sm-1 control-label control-labels">项目名称:</label>
                <div class="col-md-12">
                    <input type="text" class="form-control form-people" id="username" name="username" placeholder="请输入...">
                </div>
            </div>
            <div class="form-group form-group-common">
                <label for="construct" class="col-sm-1 control-label control-labels ">工地施工情况:</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control  form-people  form-reason " id="construct"  placeholder="请输入…"></textarea>
                </div>
            </div> 
            <div class="form-group form-group-common">
                <label for="email" class="col-sm-1 control-label control-labels">质量检测情况:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control form-people" id="email" name="email" placeholder="请输入...">
                </div>
            </div>
             <div class="form-group form-group-common">
                <label for="quality_problem" class="col-sm-1 control-label control-labels ">工程存在问题:</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control  form-people  form-reason " id="quality_problem"  placeholder="请输入…"></textarea>
                </div>
            </div> 
             <div class="form-group form-group-common">
                <label for="quality_problem" class="col-sm-1 control-label control-labels ">问题解决方案:</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control  form-people  form-reason " id="quality_problem"  placeholder="请输入…"></textarea>
                </div>
            </div> 
             <div class="form-group form-group-common">
                <label for="quality_improvement" class="col-sm-1 control-label control-labels ">要求工人改进:</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control  form-people  form-reason " id="quality_improvement"  placeholder="请输入…"></textarea>
                </div>
            </div> 
             <div class="form-group form-group-common">
                <label for="coordinate" class="col-sm-1 control-label control-labels ">需要协调部门:</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control  form-people  form-reason " id="coordinate"  placeholder="请输入请假事由…"></textarea>
                </div>
            </div> 
            <div class="form-group form-group-common">
                <label for="completion_time" class="col-sm-1 control-label control-labels ">竣工时间预计:</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control  form-people  form-reason " id="completion_time"  placeholder="请输入请假事由…"></textarea>
                </div>
            </div> 
             <div class="form-group form-group-common">
                <label for="remarks" class="col-sm-1 control-label control-labels ">要求工人改进:</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control  form-people  form-reason " id="remarks"  placeholder="请输入…"></textarea>
                </div>
            </div> 
           <div class="form-group form-group-common form-group-img">
               <div class="control-labels control-img">添加图片:</div>
               <div class="img-border">
                   <i class="iconfont icon-tianjia3 add-img-people"></i>
               </div>
           </div>
           <div class="form-group form-group-common">
                <div class="control-labels control-img">审批人:</div>
                <ul class="generate_log_member_box shenpi-person check-people">
                    <li class="add_log_people">
                        <div class="generate_log_member_addlogos">
                           <i class="iconfont icon-tianjia3 add-img-people icon-position"></i>
                        </div>
                        <p class="generate_log_member_adds">选择成员</p>
                    </li>
                </ul>
           </div>
            <div class="form-group form-group-common">
                <div class="control-labels control-img">抄送人:</div>
                <ul class="generate_log_member_box shenpi-person send-check-people">
                    <li class="add_log_peoples">
                        <div class="generate_log_member_addlogos">
                           <i class="iconfont icon-tianjia3 add-img-people icon-position"></i>
                        </div>
                        <p class="generate_log_member_adds">选择成员</p>
                    </li>
                </ul>
           </div>
            <div class="form-group form-group-common">
                <div class="col-sm-offset-4 col-sm-10 ">
                    <button type="submit" class="btn btn-primary btn-submit" id="btn-test">提交</button>
                </div>
            </div>
        </form>
</div>




